<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportesController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>
    <Label alignment="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Menu de Reportes">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
      <VBox.margin>
         <Insets bottom="50.0" />
      </VBox.margin>
    </Label>
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="320.0" minWidth="10.0" prefWidth="264.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="375.0" minWidth="0.0" prefWidth="256.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="452.0" minWidth="10.0" prefWidth="264.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
               <ComboBox fx:id="comboBoxCedulaUsuarioReportes" prefWidth="150.0" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
            <children>
               <Label text="Cedula del Usuario" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
            <children>
               <Button fx:id="btnGenerarReporteIndividual" onAction="#GenerarReporteIndividual" prefHeight="37.0" prefWidth="218.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Generar Reporte Individual">
                  <font>
                     <Font size="18" />
                  </font>
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
            <children>
               <Button fx:id="btnGenerarReporteGeneral" onAction="#GenerarReporteGeneral" prefHeight="50" prefWidth="218.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Generar Reporte General">
                  <font>
                     <Font size="18" />
                  </font>
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
                  </effect>
               </Button>
            </children></HBox>
      </children>
   </GridPane>
   <Button fx:id="btnMainMenu" onAction="#GoToMainMenu" prefHeight="50" prefWidth="200.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Volver MainMenu">
      <font>
         <Font size="18" />
      </font>
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
   <Button fx:id="btnCerrarSesion" onAction="#GoToMenuInicial" prefHeight="50" prefWidth="200" style="-fx-font-size: 16; -fx-background-color: red; -fx-text-fill: black; -fx-background-radius: 5;" text="Cerrar Sesion">
      <font>
         <Font size="18" />
      </font>
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
