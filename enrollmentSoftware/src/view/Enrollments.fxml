<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.EnrollmentsController" spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
    
    <Label text="Gestión de Inscripciones" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>
        
        <Label text="Estudiante:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbEstudiantes" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Curso:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbCursos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Fecha:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpFecha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    
    <HBox spacing="10" style="-fx-padding: 10 0;">
        <Button text="Registrar" onAction="#registrarInscripcion" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 120;"/>
        <Button text="Eliminar" onAction="#eliminarInscripcion" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-min-width: 120;"/>
    </HBox>
    
    <TableView fx:id="tblInscripciones" style="-fx-max-height: 250;">
        <columns>
            <TableColumn fx:id="colEstudiante" text="ID Estudiante" prefWidth="150"/>
            <TableColumn fx:id="colCurso" text="Código Curso" prefWidth="150"/>
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
        </columns>
    </TableView>
    
    <Button text="Volver al Menú" onAction="#volverAlMenu" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-min-width: 200;"/>
</VBox>