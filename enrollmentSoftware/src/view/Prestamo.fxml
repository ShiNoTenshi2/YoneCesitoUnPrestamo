         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
          <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="ID Prestamo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          <TextField fx:id="txtIdPrestamo" prefHeight="32.0" prefWidth="617.0" promptText="Ingrese el ID de el Prestamo" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </TextField>
          <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Cedula Usuario" GridPane.columnIndex="3" GridPane.rowIndex="1" />
         <ComboBox fx:id="comboBoxCedulaUsuarioPrestamo" prefHeight="32.0" prefWidth="617.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />
          <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="fecha" GridPane.columnIndex="2" GridPane.rowIndex="4" />
         <Label style="-fx-font-size: 16; -fx-text-fill: black;" GridPane.columnIndex="3" GridPane.rowIndex="5" />
         <DatePicker fx:id="fechaDatePicker" GridPane.columnIndex="2" GridPane.rowIndex="5" />
         <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="ID Audiovisual" GridPane.columnIndex="3" GridPane.rowIndex="10" />
         <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="ID Sala" GridPane.columnIndex="1" GridPane.rowIndex="10" />
         <ComboBox fx:id="comboBoxIdAudiovisualPrestamo" prefHeight="32.0" prefWidth="617.0" GridPane.columnIndex="3" GridPane.rowIndex="11" />
         <ComboBox fx:id="comboBoxIdSalaPrestamo" prefHeight="32.0" prefWidth="617.0" GridPane.columnIndex="1" GridPane.rowIndex="11" />
         <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Hora Inicio" GridPane.columnIndex="1" GridPane.rowIndex="7" />
         <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Hora Fin" GridPane.columnIndex="3" GridPane.rowIndex="7" />
         <ComboBox fx:id="comboBoxHoraInicio" prefHeight="32.0" prefWidth="617.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
         <ComboBox fx:id="comboBoxHoraFin" prefHeight="32.0" prefWidth="617.0" GridPane.columnIndex="3" GridPane.rowIndex="8" />
      </children>
   </GridPane>
   <Label style="-fx-font-size: 16; -fx-text-fill: black;" text="Detalles" />
   <TextField fx:id="txtDetallesPrestamo" prefHeight="40" prefWidth="300" promptText="Ingrese los Detalles del Prestamo" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
   <GridPane alignment="CENTER" translateY="1.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
                <Button fx:id="btnRegistrarPrestamo" alignment="CENTER" contentDisplay="CENTER" onAction="#RegistrarPrestamo" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Registrar Prestamo">
                    <effect>
                        <DropShadow color="#2980b9" radius="3" />
                    </effect>
                </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="3">
            <children>
               <Button fx:id="btnActualizarPrestamo" alignment="CENTER" contentDisplay="CENTER" onAction="#ActualizarPrestamo" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Actualizar Prestamo">
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
