               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
               <Button fx:id="btnLeerSala" alignment="CENTER" contentDisplay="CENTER" onAction="#LeerSala" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Leer Salas">
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="5">
            <children>
               <Button fx:id="btnBorrarPrestamo" alignment="CENTER" contentDisplay="CENTER" nodeOrientation="LEFT_TO_RIGHT" onAction="#BorrarPrestamo" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Borrar Prestamo">
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <children>
               <Button fx:id="btnLeerAudiovisual" alignment="CENTER" contentDisplay="CENTER" onAction="#LeerAudiovisual" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Leer Audiovisual">
                  <effect>
                     <DropShadow color="#2980b9" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
      </children>
   </GridPane>
	<Button fx:id="btnMenu" onAction="#GoToMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Volver al Menú">	
        <effect>
            <DropShadow color="#c0392b" radius="3" />
        </effect>
    </Button>
