<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" stylesheets="@../../resources/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuUsuariosController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24;" text="Inicio Sesion">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
    <Label text="Cedula Del usuario" />
    <TextField fx:id="txtCedulaU" prefHeight="40" prefWidth="300" promptText="Ingrese cedula del usuario" />
    <Label text="Contraseña" />
   <PasswordField fx:id="txtContraseñaU" prefHeight="40.0" prefWidth="300.0" promptText="Ingrese contraseña" />
   <Label text="Rol De Usuario" />
   <ComboBox fx:id="ComboBoxRolUsuario" prefWidth="150.0" />
    <Button fx:id="btnIngresoUsuario" onAction="#GoToIngresoUsuario" prefHeight="40" prefWidth="300" text="Ingresar">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
   <Button fx:id="btnMenuInicial" onAction="#GoToMenuInicial" prefHeight="40" prefWidth="300" text="Menu Inicial">
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
