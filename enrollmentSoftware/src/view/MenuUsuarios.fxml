<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuUsuariosController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Inicio Sesion">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Nombre De usuario" />
    <TextField fx:id="txtNombreU" prefHeight="40" prefWidth="300" promptText="Ingrese nombre de usuario" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Contraseña" />
   <PasswordField fx:id="txtContraseñaU" prefHeight="40.0" prefWidth="300.0" promptText="Ingrese contraseña" />
    <Button fx:id="btnIngreso" onAction="#IngresoUsuario" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Ingresar">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
   <Button fx:id="btnRegistro" onAction="#RegistrarUsuario" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: green; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar">
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
