<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LibraryCoursesController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cursos Disponibles">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
   <TableView fx:id="tableview" prefHeight="200.0" prefWidth="400.0">
     <columns>
       <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
       <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
       <TableColumn fx:id="colCreditos" prefWidth="100.0" text="Créditos" />
     </columns>
   </TableView>
    <Button fx:id="btnBack" onAction="#goToBack" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Volver">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnDelete" onAction="#deleteCourse" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 5;" text="Eliminar Curso">
        <effect>
            <DropShadow color="#d35400" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnMenu" onAction="#goToMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Volver al Menú">
        <effect>
            <DropShadow color="#c0392b" radius="3" />
        </effect>
    </Button>
</VBox>
