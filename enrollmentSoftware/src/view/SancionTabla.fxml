<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" stylesheets="@../../resources/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TablaSancionController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label alignment="TOP_CENTER" style="-fx-font-size: 24;" text="Tabla de Sancion">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </Label>
   <TableView fx:id="tablaSancion" prefHeight="677.0" prefWidth="820.0">
     <columns>
       <TableColumn fx:id="columnIdSancion" prefWidth="65.0" text="Id" />
         <TableColumn fx:id="columnIdDevolucionSancion" prefWidth="122.0" text="Id Devolucion" />
       <TableColumn fx:id="columnCedulaUsuarioSancion" prefWidth="124.0" text="Cedula Usuario" />
         <TableColumn fx:id="columnEstadoSancion" prefWidth="115.0" text="Estado" />
         <TableColumn fx:id="columnMontoSancion" prefWidth="151.0" text="Monto" />
         <TableColumn fx:id="columnMotivoSancion" prefWidth="281.0" text="Motivo" />
     </columns>
   </TableView>
   <Button fx:id="btnSancion" onAction="#GoToSancion" prefHeight="40" prefWidth="300" text="Volver Atras">
      <effect>
         <DropShadow color="#c0392b" radius="3" />
      </effect>
   </Button>
</VBox>
