<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InformesController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>
    <Label alignment="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Menu de Informes">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
      <VBox.margin>
         <Insets bottom="50.0" />
      </VBox.margin>
    </Label>
   <Button fx:id="btnInformeIndividual" onAction="#GoToInformeIndividual" prefHeight="50.0" prefWidth="218.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Ir a Informe Individual">
      <font>
         <Font size="18" />
      </font>
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
   <Button fx:id="btnInformeGeneral" onAction="#GoToInformeGeneral" prefHeight="50" prefWidth="218.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Ir a Informe General">
      <font>
         <Font size="18" />
      </font>
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
   <Button fx:id="btnMainMenu" onAction="#GoToMainMenu" prefHeight="50" prefWidth="218.0" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Volver MainMenu">
      <font>
         <Font size="18" />
      </font>
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
