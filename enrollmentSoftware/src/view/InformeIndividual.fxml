<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.InformeIndividualController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label alignment="TOP_CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Informe Individual">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </Label>
   <Label text="Cedula del Usuario">
      <font>
         <Font name="Arial" size="17.0" />
      </font>
   </Label>
   <ComboBox fx:id="comboBoxCedulasUsuarios" prefWidth="150.0" />
   <Label alignment="TOP_CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Informacion del Usuario">
      <font>
         <Font name="Arial" size="24" />
      </font>
      <effect>
         <DropShadow color="#95a5a6" radius="3" />
      </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </Label>
   <TableView fx:id="tablaUsuario" prefHeight="96.0" prefWidth="820.0">
     <columns>
       <TableColumn fx:id="columnCedulaUsuario" prefWidth="106.0" text="Cedula" />
       <TableColumn fx:id="columnNombreUsuario" prefWidth="326.0" text="Nombre" />
         <TableColumn fx:id="columnRolUsuario" prefWidth="127.0" text="Rol" />
         <TableColumn fx:id="columnEstadoUsuario" prefWidth="94.0" text="Estado" />
         <TableColumn fx:id="columnCorreoUsuario" prefWidth="166.0" text="Correo" />
     </columns>
   </TableView>
   <Label alignment="TOP_CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sanciones del Usuario">
      <font>
         <Font name="Arial" size="24" />
      </font>
      <effect>
         <DropShadow color="#95a5a6" radius="3" />
      </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </Label>
   <TableView fx:id="tablaSancion" prefHeight="131.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="columnIdSancion" prefWidth="69.0" text="Id Sancion" />
         <TableColumn fx:id="columnMotivoSancion" prefWidth="428.0" text="Motivo" />
         <TableColumn fx:id="columnMontoSancion" prefWidth="134.0" text="Monto" />
         <TableColumn fx:id="columnEstadoSancion" prefWidth="188.0" text="Estado" />
      </columns>
   </TableView>
   <Label alignment="TOP_CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Prestamos del Usuario">
      <font>
         <Font name="Arial" size="24" />
      </font>
      <effect>
         <DropShadow color="#95a5a6" radius="3" />
      </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </Label>
   <TableView fx:id="tablaPrestamo" prefHeight="183.0" prefWidth="820.0">
      <columns>
         <TableColumn fx:id="columnIdPrestamo" prefWidth="46.0" text="Id" />
         <TableColumn fx:id="columnIdSalaPrestamo" prefWidth="52.0" text="Id Sala" />
         <TableColumn fx:id="columnIdAudiovisualPrestamo" prefWidth="87.0" text="Id Audiovisual" />
         <TableColumn fx:id="columnHoraInicioPrestamo" prefWidth="144.0" text="HoraInicio" />
         <TableColumn fx:id="columnHoraFinPrestamo" prefWidth="139.0" text="HoraFin" />
         <TableColumn fx:id="columnEstadoPrestamo" prefWidth="103.0" text="Estado" />
         <TableColumn fx:id="columnDetallePrestamo" prefWidth="248.0" text="Detalle" />
      </columns>
   </TableView>
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
               <Button fx:id="btnInformes" onAction="#GoToInformes" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Volver a Informes">
                  <effect>
                     <DropShadow color="#c0392b" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
               <Button fx:id="btnMainMenu" onAction="#GoToMainMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #7c7c7c; -fx-text-fill: black; -fx-background-radius: 5;" text="Ir a MainMenu">
                  <effect>
                     <DropShadow color="#c0392b" radius="3" />
                  </effect>
               </Button>
            </children>
         </HBox>
      </children>
   </GridPane>
</VBox>
