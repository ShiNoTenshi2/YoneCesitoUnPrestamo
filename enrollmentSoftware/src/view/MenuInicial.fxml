<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #c2c2c2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuInicialController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Inicio Sesion">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
    <Button fx:id="btnInicioSesion" onAction="#GoToInicioSesion" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Iniciar Sesion">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
   <Button fx:id="btnRegistrarUsuario" onAction="#GoToRegistrarUsuario" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: green; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar">
      <effect>
         <DropShadow color="#2980b9" radius="3" />
      </effect>
   </Button>
</VBox>
