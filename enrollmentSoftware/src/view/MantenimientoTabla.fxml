<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="850.0" prefWidth="900.0" spacing="20" stylesheets="@../../resources/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TablaMantenimientoController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label alignment="TOP_CENTER" style="-fx-font-size: 24;" text="Tabla de Mantenimiento">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </Label>
   <TableView fx:id="TablaMantenimiento" prefHeight="677.0" prefWidth="820.0">
     <columns>
       <TableColumn fx:id="columnIdMantenimiento" prefWidth="55.0" text="Id" />
         <TableColumn fx:id="columnFechaMantenimiento" prefWidth="86.0" text="Fecha" />
       <TableColumn fx:id="columnResponsableMantenimiento" prefWidth="113.0" text="Responsable" />
         <TableColumn fx:id="columnEstadoMantenimiento" prefWidth="93.0" text="Estado" />
         <TableColumn fx:id="columnIdSalaMantenimiento" prefWidth="73.0" text="Id Sala" />
         <TableColumn fx:id="columnIdAudiovisualMantenimiento" prefWidth="120.0" text="Id Audiovisual" />
         <TableColumn fx:id="columnDescripcionMantenimiento" prefWidth="318.0" text="Descripcion" />
     </columns>
   </TableView>
   <Button fx:id="btnMantenimiento" onAction="#GoToMantenimiento" prefHeight="40" prefWidth="300" text="Volver Atras">
      <effect>
         <DropShadow color="#c0392b" radius="3" />
      </effect>
   </Button>
</VBox>
